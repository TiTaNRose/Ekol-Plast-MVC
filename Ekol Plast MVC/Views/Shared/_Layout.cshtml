                <a style="color:#387aba" asp-controller="home" asp-action="profiles" class="nav-item nav-link">Профили</a>
                <a style="color:#387aba" asp-controller="posts" asp-action="index" class="nav-item nav-link">Блог</a>
                <a style="color:#387aba" asp-controller="home" asp-action="aboutUs" class="nav-item nav-link">За нас</a>
                <a style="color:#387aba" asp-controller="contact" asp-action="index" class="nav-item nav-link">Контакт</a>
            </div>
            <a style="background-color: #2777bd;border-color: #387aba;" asp-controller="Contact" asp-action="Index" class="btn btn-primary py-4 px-lg-5 d-none d-lg-block">Бесплатна Понуда<i class="fa fa-arrow-right ms-3"></i></a>
        </div>
    </nav>
